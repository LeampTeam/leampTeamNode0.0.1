extends ../../shared/loginregisterlayout

block content
  section.row.flexbox-container
    .col-12.d-flex.align-items-center.justify-content-center
      .col-lg-4.col-md-8.col-10.box-shadow-2.p-0
        .card.border-grey.border-lighten-3.px-2.py-2.m-0
          .card-header.border-0
            .card-title.text-center
              img(src='/images/limp.png' alt='branding logo' width=150 heigth=100)
            h6.card-subtitle.line-on-side.text-muted.text-center.font-small-3.pt-2
              span
                | Create
                | Account
          .card-content
            .card-body
              form.form-horizontal.form-simple(action = "/admin/users/register" method = "POST" novalidate='')
                fieldset.form-group.position-relative.has-icon-left.mb-1
                  input#user-name.form-control.form-control-lg(type='text' name='name' placeholder='User Name' value= user!=''?user.name:'')
                  .form-control-position
                    i.feather.icon-user
                fieldset.form-group.position-relative.has-icon-left.mb-1
                  input#user-email.form-control.form-control-lg(type='email' name='email' placeholder='Your Email Address' value=user!=''?user.email:'' required='')
                  .form-control-position
                    i.feather.icon-mail
                fieldset.form-group.position-relative.has-icon-left
                  input#user-password.form-control.form-control-lg(type='password' name='pass' placeholder='Enter Password' required='')
                  .form-control-position
                    i.fa.fa-key
                fieldset.form-group.position-relative.has-icon-left
                  input#user-password.form-control.form-control-lg(type='password' name='passR' placeholder='Repeat Password' required='')
                  .form-control-position
                    i.fa.fa-key
                button.btn.btn-primary.btn-lg.btn-block(type='submit')
                  i.feather.icon-unlock
                  |  Register
            p.text-center
              | Already have an account ? 
              a.card-link(href="/admin/users/login") Login
      
